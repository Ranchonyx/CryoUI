{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist/",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    /*
        "declaration": true,
        "declarationDir": "./dist/typings/"
    */
    "lib": ["DOM", "ESNext"]
  },
  "include": ["src"]
}